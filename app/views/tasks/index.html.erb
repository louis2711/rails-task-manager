<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>  <%= task.completed ? "☑︎" : "☐"%>

     <%= link_to task.title, task_path(task) %>
       <%= link_to task_path(task), method: :delete do %>
    <i class="far fa-trash-alt"></i>
    <% end %>
     </li>

  <% end %>

</ul>

 <%= link_to " + Add a new Task", tasks_new_path %>
